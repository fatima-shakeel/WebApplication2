@model WebApplication2.Models.Cinema

@{
    ViewData["Title"] = "AddCinema";
    Layout = "~/Views/Shared/AddCinema.cshtml";
}

<h2>AddCinema</h2>

<h4>Cinema</h4>
<hr />
